<?xml version="1.0" encoding="utf-8"?><!-- suppress AndroidDomInspection -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="product.chatit">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".StartScreen.Splash"
            android:label="@string/app_name"
            android:theme="@style/opener">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StartScreen.HomeScreen"
            android:label="HomeScreen"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".viewfiles.ChatAppView"
            android:label="ChatAppView"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".contactdesc.ProfileViewer"
            android:label="ProfileViewer"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".messagefilter.MessageSelection"
            android:label="MessageSelection"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".Handlers.SendSms"
            android:label="@string/title_activity_send_sms"
            android:theme="@style/AppTheme"/>
    </application>

</manifest>